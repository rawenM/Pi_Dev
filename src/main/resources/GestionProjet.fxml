<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="Controllers.ProjetController">

    <top>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <Button text="New" onAction="#onNew"/>
            <Button text="Save" onAction="#onSave"/>
            <Button text="Delete" onAction="#onDelete"/>
            <Button text="Refresh" onAction="#onRefresh"/>
        </HBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.55">

            <!-- LEFT: Table -->
            <VBox spacing="8">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Projets" style="-fx-font-size:16px; -fx-font-weight:bold;"/>
                <TableView fx:id="table">
                    <columns>
                        <TableColumn fx:id="colId" text="ID" prefWidth="60"/>
                        <TableColumn fx:id="colTitre" text="Titre" prefWidth="250"/>
                        <TableColumn fx:id="colStatut" text="Statut" prefWidth="120"/>
                        <TableColumn fx:id="colBudget" text="Budget" prefWidth="120"/>
                    </columns>
                </TableView>
            </VBox>

            <!-- RIGHT: Form -->
            <VBox spacing="10">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>

                <Label text="Formulaire" style="-fx-font-size:16px; -fx-font-weight:bold;"/>

                <GridPane hgap="10" vgap="10">
                    <columnConstraints>
                        <ColumnConstraints minWidth="110"/>
                        <ColumnConstraints hgrow="ALWAYS"/>
                    </columnConstraints>

                    <Label text="Titre" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfTitre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                    <Label text="Budget" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfBudget" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                    <Label text="Statut" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                    <ComboBox fx:id="cbStatut" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                    <Label text="Score ESG" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                    <TextField fx:id="tfScoreEsg" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                    <Label text="Description" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                    <TextArea fx:id="taDescription" prefRowCount="6"
                              GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                </GridPane>
            </VBox>

        </SplitPane>
    </center>

</BorderPane>
