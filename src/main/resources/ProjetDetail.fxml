<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/20.0.2"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="Controllers.ProjetDetailController"
      spacing="0"
      styleClass="page">

    <VBox spacing="16" styleClass="content-area">
        <padding>
            <Insets top="20" right="24" bottom="20" left="24"/>
        </padding>

        <!-- Card -->
        <VBox spacing="14" styleClass="card">
            <padding>
                <Insets top="18" right="18" bottom="18" left="18"/>
            </padding>

            <HBox spacing="12">
                <VBox spacing="6" prefWidth="120">
                    <Label text="ID" styleClass="form-label" />
                    <Label fx:id="lblId"/>
                </VBox>

                <VBox spacing="6">
                    <Label text="Statut" styleClass="form-label"/>
                    <Label fx:id="lblStatut"/>
                </VBox>
            </HBox>

            <VBox spacing="6">
                <Label text="Titre" styleClass="form-label"/>
                <TextField fx:id="tfTitre" disable="true" styleClass="field"/>
            </VBox>

            <HBox spacing="12">
                <VBox spacing="6" HBox.hgrow="ALWAYS">
                    <Label text="Budget" styleClass="form-label"/>
                    <TextField fx:id="tfBudget" disable="true" styleClass="field"/>
                </VBox>

                <VBox spacing="6" prefWidth="160">
                    <Label text="Score ESG" styleClass="form-label"/>
                    <TextField fx:id="tfScoreEsg" disable="true" styleClass="field"/>
                </VBox>
            </HBox>

            <VBox spacing="6">
                <Label text="Adresse entreprise" styleClass="form-label"/>
                <TextField fx:id="tfCompanyAddress" disable="true" styleClass="field"/>
            </VBox>

            <HBox spacing="12">
                <VBox spacing="6" HBox.hgrow="ALWAYS">
                    <Label text="Email entreprise" styleClass="form-label"/>
                    <TextField fx:id="tfCompanyEmail" disable="true" styleClass="field"/>
                </VBox>

                <VBox spacing="6" prefWidth="200">
                    <Label text="TÃ©lÃ©phone entreprise" styleClass="form-label"/>
                    <TextField fx:id="tfCompanyPhone" disable="true" styleClass="field"/>
                </VBox>
            </HBox>

            <VBox spacing="6">
                <Label text="Description" styleClass="form-label"/>
                <TextArea fx:id="taDescription"
                          disable="true"
                          wrapText="true"
                          styleClass="field textarea"
                          style="-fx-pref-height: 150px;"/>
            </VBox>

        </VBox>

        <HBox spacing="15"
              alignment="CENTER"
              style="-fx-padding: 10 0 0 0;">

            <Button text="âœ Modifier"
                    onAction="#onModifier"
                    styleClass="btn-primary"/>

            <Button text="ðŸ—‘ Supprimer "
                    onAction="#onAnnulerProjet"
                    styleClass="btn-danger"/>

            <Button fx:id="btnSaveChanges"
                    text="ðŸ’¾ Enregistrer"
                    onAction="#onSaveChanges"
                    styleClass="btn-secondary"
                    visible="false"/>

            <Button fx:id="btnCancelEdit"
                    text="â†© Annuler"
                    onAction="#onCancelEdit"
                    styleClass="btn-secondary"
                    visible="false"/>

        </HBox>

    </VBox>

</VBox>
